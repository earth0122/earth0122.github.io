@{
    ViewData["Title"] = "Columns Offset";
}

<div class="h-100 p-3 text-white bg-dark rounded-3 mb-4">
    <h3>col-md-* 欄位的位移</h3>
    <p>col-md-offset-1, col-md-offset-2, ...col-md-offset-12</p>
</div>


<partial name="_ColumnHeaderPartial" />

<div class="row">
    <div class="col-md-1">.col-md-1</div>
    <div class="col-md-5 offset-md-2">.col-md-5 offset-md-2</div>
    <div class="col-md-3 offset-md-1">col-md-3 offset-md-1</div>
</div>

<div class="row">
    <div class="col-md-3 offset-md-2">col-md-3 offset-md-2</div>
    <div class="col-md-4 offset-md-3">.col-md-4 offset-md-3</div>
</div>

<div class="row">
    <div class="col-md-2">.col-md-2</div>
    <div class="col-md-2 offset-md-1">.col-md-2 offset-md-1</div>
    <div class="col-md-2 offset-md-1">.col-md-2 offset-md-1</div>
    <div class="col-md-2 offset-md-1">.col-md-2 offset-md-1</div>
</div>


@section topCSS{
    <style>
        .row {
            margin-top: 25px;
            margin-bottom: 25px;
        }

        div#columnheader div {
            border-radius: 0px !important;
            background-color: lightgray !important;
            text-align: center;
        }

        .row div {
            border: 1px solid black;
            border-radius: 10px;
        }

        div#columnheader div, .row div {
            padding-top: 10px;
            padding-bottom: 10px;
        }

            .row div:nth-child(1) {
                background-color: pink;
            }

            .row div:nth-child(2) {
                background-color: lightgreen;
            }

            .row div:nth-child(3) {
                background-color: orange;
            }

            .row div:nth-child(4) {
                background-color: orchid;
            }
    </style>
}
